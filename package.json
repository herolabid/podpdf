{
  "name": "podpdf",
  "version": "1.2.0",
  "description": "Ultra-fast, zero-dependency PDF generation for Node.js, Bun & Browser. 8KB minified, 5x faster than jsPDF.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./plus": {
      "import": "./dist/plus.js",
      "types": "./dist/plus.d.ts",
      "default": "./dist/plus.js"
    },
    "./browser": {
      "import": "./dist/browser.js",
      "types": "./dist/browser.d.ts",
      "default": "./dist/browser.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build:node && bun run build:browser && bun run build:types",
    "build:node": "bun build src/index.ts src/plus.ts --outdir dist --target node --minify",
    "build:browser": "bun build src/browser.ts --outdir dist --target browser --minify",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "bun --watch src/index.ts",
    "test": "bun test/test.ts",
    "example": "bun example.ts",
    "samples": "bun samples/tables.ts && bun samples/invoice.ts && bun samples/report.ts"
  },
  "keywords": [
    "pdf",
    "pdf-generation",
    "pdf-generator",
    "document",
    "invoice",
    "report",
    "table",
    "typescript",
    "zero-dependency",
    "fast",
    "lightweight",
    "minimal",
    "browser",
    "browser-pdf",
    "client-side"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/herolabid/podpdf"
  },
  "homepage": "https://github.com/herolabid/podpdf/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/herolabid/podpdf/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "typescript": "^5.7.2"
  }
}